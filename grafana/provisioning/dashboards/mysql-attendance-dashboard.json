{
  "dashboard": {
    "title": "Staff Attendance Statistics - Real-time",
    "tags": ["attendance", "real-time", "mysql"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 0,
    "refresh": "10s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Present Today",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM attendance WHERE DATE(attendance_date) = CURDATE() AND status = 'present'",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textAlignment": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "green"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0}
              ]
            },
            "custom": {"hideFrom": {"tooltip": false, "viz": false, "legend": false}}
          }
        }
      },
      {
        "id": 2,
        "title": "Total Absent Today",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM attendance WHERE DATE(attendance_date) = CURDATE() AND status = 'absent'",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textAlignment": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "red"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Total Late Today",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM attendance WHERE DATE(attendance_date) = CURDATE() AND status = 'late'",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textAlignment": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "yellow"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "yellow", "value": 0}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Total On Leave Today",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM attendance WHERE DATE(attendance_date) = CURDATE() AND status IN ('on leave', 'el', 'half day')",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textAlignment": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "blue"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": 0}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Attendance Status Distribution",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT status, COUNT(*) as count FROM attendance WHERE DATE(attendance_date) = CURDATE() GROUP BY status",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "pieType": "pie",
          "displayLabels": ["name", "percent"],
          "legend": {"displayMode": "table", "placement": "right"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "custom": {"hideFrom": {"tooltip": false, "viz": false, "legend": false}}
          }
        }
      },
      {
        "id": 6,
        "title": "Daily Attendance Trend (Last 7 Days)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE(attendance_date) as time, COUNT(*) as Present FROM attendance WHERE status = 'present' AND attendance_date >= DATE_SUB(CURDATE(), INTERVAL 7 DAY) GROUP BY DATE(attendance_date)",
            "format": "timeseries",
            "hide": false
          },
          {
            "refId": "B",
            "rawSql": "SELECT DATE(attendance_date) as time, COUNT(*) as Absent FROM attendance WHERE status = 'absent' AND attendance_date >= DATE_SUB(CURDATE(), INTERVAL 7 DAY) GROUP BY DATE(attendance_date)",
            "format": "timeseries",
            "hide": false
          },
          {
            "refId": "C",
            "rawSql": "SELECT DATE(attendance_date) as time, COUNT(*) as Late FROM attendance WHERE status = 'late' AND attendance_date >= DATE_SUB(CURDATE(), INTERVAL 7 DAY) GROUP BY DATE(attendance_date)",
            "format": "timeseries",
            "hide": false
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"lineWidth": 2, "fillOpacity": 10}
          }
        }
      },
      {
        "id": 7,
        "title": "Detailed Attendance Records (Today)",
        "type": "table",
        "gridPos": {"x": 0, "y": 12, "w": 24, "h": 6},
        "datasource": "Staff Attendance MySQL",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT a.staff_id, s.name, a.status, a.check_in_time, a.check_out_time, a.remarks FROM attendance a JOIN staff s ON a.staff_id = s.staff_id WHERE DATE(a.attendance_date) = CURDATE() ORDER BY a.created_at DESC",
            "format": "table",
            "hide": false
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "created_at", "desc": true}]
        }
      }
    ]
  },
  "overwrite": true
}
